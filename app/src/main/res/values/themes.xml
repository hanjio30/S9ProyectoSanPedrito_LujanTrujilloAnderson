<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SanPedritoUNS" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/uns_red</item>
        <item name="colorPrimaryVariant">@color/uns_red_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/uns_red_light</item>
        <item name="colorSecondaryVariant">@color/uns_red_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/uns_red</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/uns_red</item>
        <!-- Customize ActionBar -->
        <item name="actionBarStyle">@style/UNSActionBar</item>
        <!-- Material Design Components -->
        <item name="materialCardViewStyle">@style/UNSCardView</item>
        <item name="textInputStyle">@style/UNSTextInputLayout</item>
        <item name="materialButtonStyle">@style/UNSButton</item>
        <item name="chipStyle">@style/UNSChip</item>
    </style>

    <!-- ActionBar personalizado -->
    <style name="UNSActionBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">@color/uns_red</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <!-- CardView personalizado -->
    <style name="UNSCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <!-- TextInputLayout personalizado -->
    <style name="UNSTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/uns_red</item>
        <item name="hintTextColor">@color/uns_red</item>
        <item name="android:textColorHint">@color/uns_red</item>
    </style>

    <!-- Button personalizado -->
    <style name="UNSButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/uns_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Chip personalizado -->
    <style name="UNSChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_selector</item>
        <item name="android:textColor">@color/chip_text_selector</item>
        <item name="chipStrokeColor">@color/uns_red</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

</resources>